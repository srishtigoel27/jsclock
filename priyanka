<html>
	<head>
		<title>Canvas</title>
	</head>
	<body align="center">
		<canvas id="canvas" width="400" height="400" style="border:10px solid; background-color:black">
		</canvas>
		<script>
    function drawNumbers(ctx,radius){
				var ang,num;
				ctx.font=radius*0.15+"px arial";
				ctx.textBaseline="middle";
				ctx.textAlign="center";
				for(num=1;num<=12;num++){
					ang = (num*Math.PI/6);
					ctx.rotate(ang);
					ctx.translate(0,-radius*0.85);
					ctx.rotate(-ang);
					ctx.fillText(num.toString(),0,0);
					ctx.rotate(ang);
					ctx.translate(0,radius*0.85);
					ctx.rotate(-ang);
				}
     }
     </script>
	</body>
</html>
