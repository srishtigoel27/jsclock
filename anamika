<html>
	<head>
		<title>Canvas</title>
	</head>
	<body align="center">
		<canvas id="canvas" width="600" height="600" style="border:10px solid; background-color:black">
		</canvas>
		<script>
    function drawHand(ctx,pos,len,width){
				ctx.beginPath();
				ctx.lineWidth=width;
				ctx.lineCap = "round";
				ctx.moveTo(0,0);
				ctx.rotate(pos);
				ctx.lineTo(0,-len);
				ctx.stroke();
				ctx.rotate(-pos);
			}
		</script>
	</body>
</html>
